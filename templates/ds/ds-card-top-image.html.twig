{#
/**
 * @file
 * Display Suite card image top.
 *
 * Available variables:
 * - outer_wrapper: outer wrapper element
 * - first_wrapper: wrapper element around first region
 * - second_wrapper: wrapper element around second region
 * - attributes: layout attributes
 * - first_attributes: attributes for first region
 * - second_attributes: attributes for second region
 * - first: content of first region
 * - second: content of second region
 */
#}
<{{ outer_wrapper }}{{ attributes.addClass('card', 'card--top-image', 'clearfix') }}>

  {{ title_suffix.contextual_links }}

  <{{ first_wrapper }}{{ first_attributes.addClass('card__image', 'card__image') }}>
    {{ first }}
  </{{ first_wrapper }}>

  <{{ second_wrapper }}{{ second_attributes.addClass('card__block') }}>
    {{ second }}
  </{{ second_wrapper }}>

  <{{ third_wrapper }}{{ third_attributes.addClass('card__footer') }}>
    {{ third }}
  </{{ third_wrapper }}>

</{{ outer_wrapper }}>
